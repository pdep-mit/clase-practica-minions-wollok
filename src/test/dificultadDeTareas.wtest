import src.tareas.*

describe "dificultad de las tareas" {
	test "la dificultad de arreglar una maquina es el doble de la complejidad de la maquina a arreglar" {
		const arreglarUnaMaquina = new ArreglarUnaMaquina(30)
	
		assert.equals(60, arreglarUnaMaquina.dificultad())
	}
	
	test "la dificultad de limpiar un sector es 10" {
		const limpiarUnSector = new LimpiarUnSector()
		
		assert.equals(10, limpiarUnSector.dificultad())
	}
	
	test "cambiar la dificultad de limpiar un sector deber√≠a cambiarlo para todas las tareas de defender un sector" {
		const limpiarSectorA = new LimpiarUnSector()
		const limpiarSectorB = new LimpiarUnSector()
		
		dificultadDeLimpiarUnSector.cambiarA(20)
		
		assert.equals(20, limpiarSectorA.dificultad())
		assert.equals(20, limpiarSectorB.dificultad())
	}
}
